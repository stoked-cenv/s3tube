{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "lib": ["es2017"],
    "esModuleInterop": true
  },
  "exclude": [
    "dist", "example"]
}
